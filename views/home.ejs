
        <link rel="stylesheet" href="/css/home.css" type="text/css">
            <div id="main-container">
                <h1>TODO App</h1>
                <form action="/create-task" method="POST" id="create-task">
                    <div id="desc-container">
                        <label for="desc">DESCRIPTION</label><br>
                        <input type="text" name="description" placeholder="What do you need to do?" id="desc" required>  
                    </div>
                    
                    <div id="category-due-date-container">
                        <div id="category-container">
                            <label for="category">CATEGORY</label><br>
                            <select name="category" id="category" required>
                                <option value="" disabled selected>Choose a category</option>
                                <option value="Personal">Personal</option>
                                <option value="Work">Work</option>
                                <option value="School">School</option>
                                <option value="Cleaning">Cleaning</option>
                                <option value="Others">Others</option>
                            </select>
                        </div>
                        <div id="due-date-container">
                            <label for="due-date">DUE DATE</label><br>
                            <input type="date" name="dueDate" id="due-date" required>
                        </div>
                        
                    </div>
                    
                </form>
                <div id="buttons-container">
                    <button type="submit" form="create-task" id="add-task-btn"><i class="fas fa-plus"></i> &nbsp ADD TASK</button>
                    <button type="submit" form="delete-tasks" id="delete-tasks-btn"><i class="fas fa-trash-alt"></i> DELETE TASKS</button>

                </div>
                
                <form action="/delete-tasks" method="POST" id="delete-tasks">
                    <% let i = 0; %>
                    <% for(let task of locals.tasks_list){ i++;%>
                        <div id="task-container">
                            <div class="task-details">
                                <input type="checkbox" value="<%= task._id %>" class="check-box" name="task<%= i %>">
                                <div>
                                    <p class="task"><%= task.description %></p>
                                    <p class="date"><i class="far fa-calendar-alt"></i> &nbsp <%= task.dueDate %></p>
                                </div>
                            </div>
                            
                            <div class="<%= task.category %>">
                                    <%= task.category %>
                            </div>
                        </div>  
                    <% } %>               
                </form>

            </div>